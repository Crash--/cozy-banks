@require 'generic/normalize.styl'
@require 'elements/defaults.styl'
@require '~styles/utilities.styl'
@require '~styles/text.styl'
@require 'settings/breakpoints'
@require '~styles/palette.styl'

html
    -webkit-touch-callout none
    min-height 100%

body
    min-height 100%

h4
    margin-top 0
    margin-bottom 1rem

+small-screen()
    [role='banner'][data-drawer-visible='true']
        z-index 90

// TODO Move this directly to the cozy-bar
:global
    +small-screen()
        [role=banner] .coz-bar-container
            padding 0

    .qawolf .qawolf__hide
        opacity 0

    .qawolf-debug [data-testid]
            position relative

    .qawolf-debug [data-testid]:after
        content: attr(data-testid)
        background: rgba(255, 0, 0, .5)
        border-radius 1rem
        padding .15em
        font-size small
        position absolute
        display inline-block
        top 0
        left 0

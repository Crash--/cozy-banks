@require '~styles/spacers.styl'
@require 'settings/palette'
@require 'generic/animations'

:global
    // Global utils classes comes here
    .u-ellipsis
        white-space nowrap
        text-overflow ellipsis
        overflow hidden

    .u-spin
        animation  spin 1s linear infinite
        display inline-block

    .u-text-bold
        font-weight bold

    .u-hover:hover
        background paleGrey
        cursor pointer

    // to remove after https://github.com/cozy/cozy-ui/pull/399 is merged
    .u-clickable
        cursor pointer

    .u-text-center
        text-align center

    .u-full-width
        width 100%

    .u-click-xl::after
      width 130%
      height 130%
      top -15%
      left -15%
      content '\00a0'
      display block
      position absolute

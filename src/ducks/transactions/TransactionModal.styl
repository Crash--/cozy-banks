@require 'settings/breakpoints'

.TransactionModal
    .TransactionModalHeader
        position relative
        border-bottom 1px solid var(--silver)
        margin-bottom 0
        padding-top 0
        padding-bottom 0
        height 5rem
        display flex
        align-items center
        justify-content center

.TransactionModalHeading
    text-align center
    padding-top 4px

.TransactionModalContent
    padding 0

    &:last-child
        padding 0

.TransactionModalSeparator
    margin-top 0
    margin-bottom 0
    border 0
    border-top 1px solid var(--silver)

.TransactionModalRow
    padding-left 24px
    padding-right 24px
    min-height 57px

.TransactionModalRow-disabled
    color var(--coolGrey)
    font-style italic
    cursor default

.TransactionModalRow-clickable
    cursor pointer

.TransactionModalRow-multiline
    padding-top 12px
    padding-bottom 12px

.TransactionModalRowIcon
    margin-right 24px

.TransactionModalRowIcon-alignTop
    margin-top 3px

.TransactionModalRowIcon-reversed
    transform rotate(180deg)

.TransactionLabel
    font-weight bold
    line-height 1.5
    color var(--charcoalGrey)

.TransactionInfos
    margin-top 8px

.TransactionInfo
    line-height 1.7
    font-size 14px
    color var(--coolGrey)

.TransactionInfoLabel
    display inline-block
    margin-right 8px
    color var(--charcoalGrey)

.TransactionModalCross
    width 1rem
    height 1rem
    min-height auto
    z-index 1
    top 1.4rem
    right 1.4rem

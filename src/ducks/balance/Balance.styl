@require 'settings/breakpoints'
@require 'settings/palette'

.Balance_HeaderColor_primary
    padding-top: 1.5rem
    padding-bottom .5rem
    text-align center
    color white
    min-height 213px

    +small-screen()
        min-height 159px
        padding-top: .5rem
        padding-bottom 0

.Balance__currentBalance
    text-align center
    font-size 2rem
    line-height 2.5rem

    +small-screen()
        font-size 1.5rem
        line-height 2rem

.Balance__currentBalanceCurrency
    color inherit

.Balance__subtitle
    margin-bottom .5rem
    text-transform uppercase
    font-size 0.75rem
    line-height 1rem
    min-height 1rem
    font-weight bold
    color rgba(255, 255, 255, 0.64)

@require 'components/button.styl'
@require 'settings/breakpoints'

.bnk-loading, .bnk-loading--no-margin
    text-align center
    &:before
        content     ''
        margin      5rem auto 0
        width       5rem
        height      5rem
        @extend $icon-spinner-blue

    h2
        font-size(24px)
        margin         2.0625rem auto 0
        line-height    1.3
        color          var(--charcoalGrey)
        letter-spacing -.2px
    p
        margin-top  0.9375rem
        color       var(--coolGrey)
        line-height 1.5

.pho-loading--no-margin
    &:before
        margin 0


+medium-screen()
    .bnk-loading
        &:before
            width  3.4375rem
            height 3.4375rem
        h2
            margin 2.0625rem 1.5em 0
        p
            margin 0.3125rem 1.5em 0

@require 'tools/mixins'

.infos--normal
    background-color var(--paleGrey)

.infos--error
    background-color var(--chablis)

.infos--icon
    width rem(16)
    height rem(16)
    padding-top: 0.2em

.infos--content
    width 100%
    text-align left

.infos--container
    display flex
    width 100%

.infos--error .infos--title
    color var(--monza)
